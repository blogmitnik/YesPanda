            .badge-wrapper.bullet
              %span.badge-category-bg{:style => "background-color: #1fbba6;"}
              %span.badge-category Verified Level (99.51 ~ 100 %)
            .badge-wrapper.bullet
              %span.badge-category-bg{:style => "background-color: #81bef7;"}
