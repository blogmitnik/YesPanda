<header class="page-header">
  <h2>Application: <%= @application.name %></h2>
</header>

<div id="media">
  <div id="media-body">
    <h4>Callback url:</h4>
    <p><code><%= @application.redirect_uri %></code></p>

    <h4>Application Id:</h4>
    <p><code><%= @application.uid %></code></p>

    <h4>Secret:</h4>
    <p><code><%= @application.secret %></code></p>
    
    <h3>Actions</h3>
    <p><%= link_to 'List all', applications_path %></p>
    <p><%= link_to 'Edit', edit_application_path(@application) %></p>
    <p><%= link_to 'Remove', @application, :method => :delete, :data => { :confirm => "Are you sure?" } %></p>
  </div>
</div>